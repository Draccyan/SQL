use BluePrint
GO

create table Clientes(
	ID bigint primary key identity(1,1),
	RazonScl varchar(50) not null,
	CUIT varchar(11) not null unique,
	Telefono varchar(8),
	Mail varchar (50),
	Celular varchar (16),
	Tipo varchar(100) not null,
)

create table Proyectos(
	ID bigint primary key not null,
	Nombre varchar(50) not null,
	Descripcion varchar(200),
	ClienteID bigint foreign key references Clientes(ID) not null,
	FechaInicio date not null,
	FechaFin date null,
	CostoEstimado money check(CostoEstimado > 0) not null,
	Estado varchar(20) not null check(Estado = 'vigente' or Estado = 'cancelado'),
)
