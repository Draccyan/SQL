  
--create database BluePrint
--GO
use BluePrint
GO

create table TipoCLientes(
	ID bigint primary key not null,
	Tipo varchar(100) not null,
)

create table ContactosClientes(
	ID bigint primary key not null,
	Telefono varchar(8),
	Mail varchar (50),
	Celular varchar (16),
)

create table Clientes(
	ID bigint primary key identity(1,1),
	RazonScl varchar(50) not null,
	CUIT varchar(11) not null unique,
	TipoCliente bigint foreign key references TipoClientes(ID) not null,
	DatosdeContacto bigint foreign key references ContactosClientes(ID) not null,
)

create table Proyectos(
	ID bigint primary key not null,
	Nombre varchar(50) not null,
	Descripcion varchar(200),
	ClienteID bigint foreign key references Clientes(ID) not null unique,
	FechaInicio date not null check(FechaInicio > GETDATE()),
	FechaFin date,
	CostoEstimado money check(CostoEstimado > 0) not null,
	Marca varchar(20) not null check(Marca = 'vigente' or Marca = 'cancelado'),
)
